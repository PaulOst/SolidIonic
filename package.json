{
  "name": "@paulost/root",
  "type": "module",
  "version": "1.0.0",
  "description": "A library that exposes the Ionic Framework web components as idiomatic SolidJS components.",
  "main": "dist/solid-ionic.ts",
  "types": "dist/solid-ionic.ts",
  "module": "dist/solid-ionic.esm.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/solid-ionic.esm.js",
      "require": "./dist/solid-ionic.js"
    }
  },
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "npx prettier --write src && vite build",
    "serve": "vite preview"
  },
  "devDependencies": {
    "@types/node": "^20.2.5",
    "pathe": "^1.1.1",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-solid": "^2.7.0"
  },
  "dependencies": {
    "@ionic/core": "^7.0.11",
    "solid-js": "^1.7.6"
  },
  "keywords": [
    "solidjs",
    "solid",
    "ionic",
    "ionic framework",
    "web components"
  ],
  "author": "PaulOst",
  "license": "MIT"
}
